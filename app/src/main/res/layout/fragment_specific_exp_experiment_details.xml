<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/specific_exp_details_experiment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="Title/Description"
            android:textSize="40sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#736F6F" />

        <TextView
            android:id="@+id/specific_exp_details_experiment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="Type"
            android:textSize="35sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#736F6F" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="start|center_vertical"
                android:text="Status: "
                android:textSize="30sp" />

            <TextView
                android:id="@+id/specific_exp_details_experiment_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="Active"
                android:textSize="30sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#736F6F" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:text="Geo-location required: "
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/specific_exp_details_geolocation_required"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="Yes"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#736F6F" />

        <Button
            android:id="@+id/specific_exp_details_geolocation_map_button"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:text="GEO-LOCATION MAP" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subscribe"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/specific_exp_details_subscribe_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="80dp" />


            <Button
                android:id="@+id/specific_exp_details_add_trial_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableLeft="@drawable/add"
                android:text="Trial" />

        </LinearLayout>

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#736F6F" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/viewTrialBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View trials" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>