<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/main_menu_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/specific_exp_details_experiment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_horizontal"
                android:text="Title/Description"
                android:textSize="35sp"
                android:paddingTop="15dp"
                android:layout_marginTop="10dp"

                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="45dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/is_ended_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_check_circle_solid" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/comic_regular"
                        android:id="@+id/is_open_logo_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="0.45"
                        android:text="TextView"
                        android:textSize="15sp"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/type_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:layout_weight="0.5"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/ic_count" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/comic_regular"
                        android:id="@+id/type_logo_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="0.45"
                        android:text="TextView"
                        android:textSize="15sp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/geo_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/geo_req" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/comic_regular"
                        android:id="@+id/geo_logo_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="0.45"
                        android:text="TextView"
                        android:textSize="15sp"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/user_icon" />

                <TextView
                    android:id="@+id/specific_exp_details_owner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_regular"
                    android:text="user0000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/status_icon" />


                <TextView
                    android:id="@+id/specific_exp_details_experiment_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_regular"
                    android:text="Active"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/geo_req" />


                <TextView
                    android:id="@+id/specific_exp_details_geolocation_required"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/lato_regular"
                    android:text="Yes"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="145dp"
                android:orientation="horizontal"
                >


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/specific_exp_details_geolocation_map_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"

                    android:layout_weight="1"


                    android:background="@drawable/ice_blue_button"
                    android:drawableLeft="@drawable/map"

                    android:fontFamily="@font/lato_regular"
                    android:padding="10dp"
                    android:text="Map"

                    android:textAlignment="center" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/specific_exp_details_add_trial_button"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/add"
                    android:fontFamily="@font/lato_regular"

                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="40dp"

                    android:text="Trial"
                    android:textAlignment="center"

                    android:background="@drawable/ice_blue_button"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_light"
                    android:text="Subscribe"
                    android:textAllCaps="false"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/specific_exp_details_subscribe_checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>