<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
    tools:context=".UI.main_menu.SelectionActivity">

    <Button
        android:id="@+id/binomial_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="103dp"
        android:onClick="toBinomial"
        android:text="toBinomial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
            android:text="toCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="103dp"
            android:layout_marginStart="103dp" android:layout_marginTop="66dp"
            app:layout_constraintTop_toBottomOf="@+id/binomial_button" android:onClick="toCounter"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="84dp"
        android:onClick="toIntCount"
        android:text="toIntCount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />
    <Button
        android:text="toMeasurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/toMeasurement"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/button4" android:onClick="toMeasurement"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="103dp"
        android:layout_marginStart="103dp"/>

    <Button
        android:id="@+id/toDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="84dp"
        android:onClick="toDetails"
        android:text="todetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toMeasurement" />
</androidx.constraintlayout.widget.ConstraintLayout>
