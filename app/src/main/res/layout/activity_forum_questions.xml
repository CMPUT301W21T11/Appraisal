<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/tab_bar_f_e"
            app:layout_constraintTop_toTopOf="parent">

        <ListView
                android:id="@+id/forum_questions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"></ListView>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/tab_bar_f_q"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <Button
                android:id="@+id/home_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="home" android:onClick="toHome"/>

        <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="search" android:onClick="toSearch"/>

        <Button
                android:id="@+id/forum_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="forum" android:onClick="toForum"/>

        <Button
                android:id="@+id/my_exp_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="list" android:onClick="toMyExps"/>

        <Button
                android:id="@+id/profile_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="profile" android:onClick="toProfile"/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_constraintBottom_toTopOf="@+id/tab_bar_f_q"
            app:tint="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/purple_500"
            app:srcCompat="@drawable/add_icon"/>

</androidx.constraintlayout.widget.ConstraintLayout>