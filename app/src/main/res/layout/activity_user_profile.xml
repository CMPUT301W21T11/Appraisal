<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_profile_image"
            android:layout_width="167dp"
            android:layout_height="166dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/user_icon" />

        <TextView
            android:id="@+id/user_id_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounder_corner"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="UserID"
            android:textColor="@color/pink"
            android:textSize="30sp" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:orientation="horizontal">


<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="60dp"-->
<!--                android:fontFamily="@font/lato_regular"-->
<!--                android:text="Name: "-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="24sp" />-->

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="50dp"
                app:srcCompat="@drawable/person_outline"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/name_textview"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_regular"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:text="user"
                android:textColor="@color/white"
                android:textSize="24sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:orientation="horizontal">


<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="60dp"-->
<!--                android:text="Email: "-->
<!--                android:fontFamily="@font/lato_regular"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="24sp" />-->

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="50dp"
                app:srcCompat="@drawable/email"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_weight="1"
                android:textStyle="bold"
                android:id="@+id/email_address_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:fontFamily="@font/lato_regular"
                android:text="user@ualberta.ca"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="60dp"-->
<!--                android:text="Phone: "-->
<!--                android:fontFamily="@font/lato_regular"-->
<!--                android:textColor="@color/white"-->
<!--                android:textSize="24sp" />-->

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="50dp"
                app:srcCompat="@drawable/phone"
                android:layout_gravity="center_vertical"/>


            <TextView
                android:layout_weight="1"
                android:textStyle="bold"
                android:id="@+id/phone_number_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/lato_regular"
                android:text="+1 780 999 9999"
                android:textColor="@color/white"
                android:textSize="24sp" />


        </LinearLayout>


        <Button
            android:id="@+id/edit_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="editUserProfile"
            android:text="Edit Profile"
            android:textAllCaps="true" />


    </LinearLayout>




</ScrollView>
