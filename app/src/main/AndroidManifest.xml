<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.appraisal">

    <application android:allowBackup="true" android:icon="@mipmap/ic_logo" android:label="@string/app_name" android:roundIcon="@mipmap/ic_logo_round" android:supportsRtl="true" android:theme="@style/Theme.Appraisal">
        <activity android:name=".UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.main_menu.subscription.ExpSubscriptionActivity" android:label="My Subscriptions"></activity>
        <activity android:name=".UI.main_menu.forum.ForumRepliesActivity" android:label="Forum Replies">
        </activity>

        <activity android:name=".UI.main_menu.my_experiment.MyExperimentActivity" android:label="My Experiments"></activity>
 
        <activity android:name=".UI.trial.BinomialActivity"></activity>

        <activity android:name=".UI.trial.CounterActivity"></activity>

        <activity android:name=".UI.trial.MeasurementActivity"></activity>

        <activity android:name=".UI.trial.NonNegIntCountActivity"></activity>

        <activity android:name=".UI.main_menu.specific_experiment_details.ViewTrialActivity" android:label="Trials"></activity>

        <activity android:name=".UI.main_menu.my_experiment.PublishExpActivity" android:label="Publish Experiment">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".UI.main_menu.my_experiment.MyExperimentActivity"/>
        </activity>

        <activity android:name=".UI.main_menu.user_profile.EditProfileActivity" android:label="Edit Profile"></activity>
        <activity android:name=".UI.main_menu.user_profile.UserProfileActivity" android:label="Profile">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".UI.main_menu.subscription.ExpSubscriptionActivity" />
        </activity>
        <activity android:name=".UI.main_menu.specific_experiment_details.SpecificExpActivity"></activity>
        <activity android:name=".UI.main_menu.search.SearchActivity" android:label="Search"></activity>
    </application>

</manifest>