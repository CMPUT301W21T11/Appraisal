<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appraisal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Appraisal">
        <activity android:name=".UI.UserProfileActivity"></activity>
        <activity android:name=".UI.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.SelectionActivity"></activity>
        <activity android:name=".UI.ExpSubscriptionActivity"></activity>
        <activity android:name=".UI.ForumHomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.MainActivity" />
        </activity>
        <activity android:name=".UI.ForumQuestionsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.ForumHomeActivity" />
        </activity>
        <activity android:name=".UI.ForumRepliesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.ForumQuestionsActivity" />
        </activity>

        <activity android:name=".UI.AuthenticationActivity"></activity>
    </application>

</manifest>